<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".VerContactoActivity">

    <ImageView
        android:id="@+id/imgContactos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="530dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/contactocrud" />

    <TextView
        android:id="@+id/lblMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matricula:"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"></TextView>

    <EditText
        android:id="@+id/tfMatricula"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:textSize="18dp"
        android:inputType="number"
        android:hint="ej: 57211000100">
    </EditText>

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre(s):"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"></TextView>

    <EditText
        android:id="@+id/tfNombre"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="150dp"
        android:textSize="18dp"
        android:hint="ej: Yonathan Uriel">
    </EditText>

    <TextView
        android:id="@+id/lblApellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos:"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"></TextView>

    <EditText
        android:id="@+id/tfApellidos"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="150dp"
        android:textSize="18dp"
        android:hint="ej: Pastrana Tepectzin">
    </EditText>

    <TextView
        android:id="@+id/lblSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo:"
        android:textStyle="bold"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"></TextView>

    <EditText
        android:id="@+id/tfSexo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="150dp"
        android:textSize="18dp"
        android:hint="ej: Hombre o Mujer">
    </EditText>

    <TextView
        android:id="@+id/lblFechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Nacimiento:"
        android:textStyle="bold"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"></TextView>

    <EditText
        android:id="@+id/tfFechaNacimiento"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="180dp"
        android:textSize="18dp"
        android:hint="ej: 2001/05/11">
    </EditText>

    <Button
        android:id="@+id/btnUpdateContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="530dp"
        android:layout_marginTop="180dp"
        android:text="Actualizar contacto" />

    <Button
        android:id="@+id/btnDeleteContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="540dp"
        android:layout_marginTop="230dp"
        android:text="Eliminar contacto" />


</RelativeLayout>